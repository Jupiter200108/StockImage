<div class="container">
  <div class = "row col-md-12 my-5 mx-0 px-0">
    <div class = "col-md-6 col-xl-5">
      <div class="col-md-12 py-4 px-2 border rounded-lg py-4 px-2 my-1">
        <div class="text-center py-4">
          <h3>ジャンル一覧・追加</h3>
        </div>
        <%= form_with model: @genre,url: admin_genres_path,method: :post do |f| %>
          <div class="row col-md-12 mx-0">
            <div class="col-5"><%= f.label :name,"ジャンル名" %></div>
            <div class="col-7 px-0"><%= f.text_field :name, class: "col-12 px-1" %></div>
          </div>
          <div class="row col-12 mx-0">
            <div class="col-5"></div>
            <div class="col-7 px-0">
              <%= f.radio_button :contents_status, Genre.contents_statuses.key(0) %>
              <%= f.label :contents_status_image, Genre.contents_statuses_i18n[:image], class: "h5 align-middle my-auto mx-1" %>
              <%= f.radio_button :contents_status, Genre.contents_statuses.key(1) %>
              <%= f.label :contents_status_video, Genre.contents_statuses_i18n[:video], class: "h5 align-middle my-auto mx-1"%>
            </div>
          </div>
          <div class="row col-12 justify-content-center mx-0">
            <%= f.submit "新規登録", class: "btn btn-block mybtn btn-primary text-white tx-tfm rounded-pill mt-4" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class = "col-md-6 col-xl-7 d-flex">
      <div class = "col-md-6 border border-right-0 border-dark px-0 my-1">
        <div class="col-md-12 bg-secondary text-white text-center py-2">
          画像ジャンル
        </div>

        <% @genres_image.each do |genre| %>
        <div class="row col-12 mx-0 py-2 px-0 border-bottom align-items-center">
          <div class="col-6 col-lg-8 pr-0 text-short">
            <%= genre.name %>
          </div>
          <div class="col-6 col-lg-4 px-0">
            <%= link_to "編集",edit_admin_genre_path(genre.id), class: "btn btn-sm btn-outline-success rounded-pill" %>
          </div>
        </div>
        <% end %>
      </div>

      <div class = "col-md-6 border border-dark px-0 my-1">
        <div class="col-md-12 bg-secondary text-white text-center py-2">
          動画ジャンル
        </div>

        <% @genres_video.each do |genre| %>
        <div class="row col-12 mx-0 py-2 px-0 border-bottom align-items-center">
          <div class="col-6 col-lg-8 pr-0 text-short">
            <%= genre.name %>
          </div>
          <div class="col-6 col-lg-4 px-0">
            <%= link_to "編集",edit_admin_genre_path(genre.id), class: "btn btn-sm btn-outline-success rounded-pill" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
