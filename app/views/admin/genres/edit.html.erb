<div class="container">
  <div class = "row">
    <div class = "col-lg-5">
      <h3 class ="my-5">ジャンル編集</h3>
        <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
          <%= f.label :name,"ジャンル名",class: "mr-4" %>
          <%= f.text_field :name, class: "mr-4" %>
          <%= f.radio_button :contents_status, Genre.contents_statuses.key(0) %>
          <%= f.label :contents_status_image, Genre.contents_statuses_i18n[:image], class: "h5" %>
          <%= f.radio_button :contents_status, Genre.contents_statuses.key(1) %>
          <%= f.label :contents_status_video, Genre.contents_statuses_i18n[:video], class: "h5"%>
          <%= f.submit "変更を保存", class: "btn btn-sm btn-outline-success" %>
        <% end %>
    </div>
  </div>
</div>