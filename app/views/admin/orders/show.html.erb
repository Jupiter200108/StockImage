
<div class="container">
  <div class="row">
    <div class="col-md-6 text-center pl-5 my-5">
      <h3 mx-auto>注文履歴詳細</h3>
    </div>
  </div>
  <div class="row mb-5">
    <div class="col-md-6">
      <table class="table table-borderless">
        <tr>
          <th style="width:20%"><h5 class="font-weight-bold">購入者</h5></th>
          <td>
            <%= link_to admin_end_user_path(@order.end_user_id) do %>
              <%= @order.end_user.name %>
            <% end %>
          </td>
        </tr>
        <tr style="height:20%">
          <th><h5 class="font-weight-bold">注文日</h5></th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td><h5 class="font-weight-bold">支払方法</h5></td>
          <td><%=@order.payment_method_i18n %></td>
        </tr>
      </table>
    </div>
  </div>
  <div>
    <div class="row">
      <div class="col-md-6">
        <table class="table border">
          <thead class ="table-dark">
          <tr>
            <th style="width:25%">商品名</th>
            <th>価格</th>
          </tr>
          </thead>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%=order_detail.item.name %></td>
            <td>¥<%= order_detail.item.add_tax_price.to_s(:delimited) %></td>
          </tr>
          <% end %>
        </table>
      </div>
      <div class="col-md-6">
        <table class="table border">
          <tr>
            <td class ="table-dark"><h5 class="font-weight-bold">合計額</h5></td>
            <td class="font-weight-bold">¥<%=@order.total_payment.to_s(:delimited)%>円</td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

