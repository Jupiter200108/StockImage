<div class="container">
  <div class="row px-0">
    <div class="mt-5 mb-4">
      <h3>注文履歴一覧</h3>
    </div>
  </div>

  <div class="row col-12 px-0">
    <table class= "table">
      <tr>
        <td class= "col-3 px-0 py-2 pl-1 table-dark">購入時</td>
        <td class= "col-3 px-0 py-2 pl-1 table-dark">購入者</td>

      </tr>

      <% @orders.each do |order| %>
        <tr class="border-bottom">
        <td class = "align-middle">
          <%=link_to admin_order_path order do %>
          <%= order.created_at.strftime('%Y/%m/%d') %>
          <% end %>
        </td>
        <td class = "align-middle"><%= order.end_user.name %></td>
      <% end %>
    </table>
    <div class ="row col-12">
      <div class ="col">
        <span class="textt-center"><%= paginate @orders %></span>
      </div>
    </div>
  </div>
</div>