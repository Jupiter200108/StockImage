<div class ="container">
  <div class ="row d-flex justify-content-between mb-5 mt-5">
    <h3>商品一覧</h3>
    </div>
  <div class ="row">
    <table class = "table">
      <thead class ="table-dark">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>価格</th>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td>
            <%= item.id %>
          </td>
          <td>
            <%= link_to item.name,items_path(item.id), class: "text-dark" %>
          </td>
          <td>
            ¥<%= item.price %>
          </td>
          <td>
            <%= item.genre.name %>
          </td>
          <td>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @items %>
</div>
