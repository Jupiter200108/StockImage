<div class="container">
  <div class = "row">
    <div class = "col-lg-5">
      <h3 class ="my-5">カテゴリー編集</h3>
        <%= form_with model: @category, url: admin_category_path(@category.id), method: :patch do |f| %>
          <%= f.label :name,"カテゴリー名",class: "mr-4" %>
          <%= f.text_field :name, class: "mr-4" %>
          <%= f.submit "変更を保存", class: "btn btn-sm btn-outline-success" %>
        <% end %>
    </div>
  </div>
</div>