<div class="container">
  <div class = "row col-md-12 my-5 mx-0 justify-content-center">
    <div class = "col-md-5">
      <div class="col-md-12 py-4 px-2 border">
        <div class="text-center py-4">
          <h3>カテゴリー一覧・追加</h3>
        </div>
        <%= form_with model: @category,url: admin_categories_path,method: :post do |f| %>
          <div class="row col-md-12 mx-0">
            <div class="col-5"><%= f.label :name,"カテゴリー名" %></div>
            <div class="col-7 px-0"><%= f.text_field :name, class: "col-12 px-1" %></div>
          </div>

          <div class="row col-12 justify-content-center mx-0">
            <%= f.submit "新規登録", class: "btn btn-sm btn-outline-danger mt-4" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class = "row col-md-12 my-5 mx-0  justify-content-center">
    <div class = "col-md-5">
      <div class = "col-md-12 border border-dark px-0">
        <div class="col-md-12 bg-secondary text-white text-center py-2">
          カテゴリー
        </div>

        <% @categories.each do |category| %>
        <div class="row col-12 mx-0 py-2 border-bottom">
          <div class="col-md-7">
            <%= category.name %>
          </div>
          <div class="col-md-5">
            <%= link_to "編集する",edit_admin_category_path(category.id), class: "btn btn-sm btn-outline-success" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    
  </div>
</div>