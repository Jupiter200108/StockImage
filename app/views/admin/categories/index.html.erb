<div class="container">
  <div class = "row">
    <div class = "col-lg-5">
      <h3 class ="my-5">カテゴリー一覧・追加</h3>

        <%= form_with model: @category,url: admin_categories_path,method: :post do |f| %>
          <%= f.label :name,"カテゴリー名" %>
          <%= f.text_field :name %>
          <%= f.submit "新規登録", class: "btn btn-sm btn-outline-success" %>
        <% end %>

        <table class= "table mt-5">
          <thead>
            <th class ="table-dark">カテゴリー</th>
            <th class ="table-dark"></th>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= link_to "編集する",edit_admin_category_path(category.id), class: "btn btn-sm btn-outline-success" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
