<div class="container py-5 my-5">
  <div class="row col-md-4 border border-2 rounded-lg my-5 mx-auto py-5">
		<div class="col-md-12 mx-auto">
			<div class="logo mb-3">
			  <div class="col-md-12 text-center">
				 <h2>ユーザー情報編集</h2>
			  </div>
			</div>
			<%= form_with model: @end_user, url: end_user_path(current_end_user.id), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :email,"Email" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'sample@example.com',class: 'col-12 mx-0 pl-1' %>
        </div>
        <div class="form-group">
          <%= f.label :name,"Name" %>
          <%= f.text_field :name,placeholder: '令和道子',class: 'col-12 mx-0 pl-1' %>
        </div>

        <div class="col-md-12 text-center mt-5">
          <%= f.submit "編集を保存",class: 'btn btn-block mybtn btn-success text-white tx-tfm rounded-pill' %>
        </div>
      <% end %>
    </div>
	</div>
</div>