<%= form_with model: @end_user, url: end_user_path(current_end_user.id), method: :patch do |f| %>
<div class="container">
  <div class="mb-4 mt-5">
    <h3>会員情報編集</h3>
  </div>
  <div class ="row col-12">
    <table class=" mb-4">
      <tr>
        <td>氏名</td>
        <td class ="pl-3">
          <%= f.text_field :name,placeholder: '令和' %>
        </td>
      </tr>
      <tr>
        <td><%= f.label :email,"メールアドレス" %></td>
        <td class ="pl-3"><%= f.email_field :email, autocomplete: "email",placeholder: 'sample@example.com' %></td>
      </tr>
    </table>
  </div>
  <%= f.submit "編集内容を保存",class: 'btn btn-outline-success' %>
  <%= link_to "退会する", unsubscribe_path(current_end_user.id),class: 'btn btn-outline-danger' %>
  <% end %>
</div>