<div class="container col-6 shadow mt-5">
  <div class="row col-8 mx-auto d-flex justify-content-center">
    <div class="mt-5 mb-4 ml-5　mx-auto">
      <h3>画像・動画新規登録</h3>
    </div>
  </div>
  <%= form_with model: @item,url: items_path,method: :post do |f| %>
    <div class="row col-12 d-flex mx-auto justify-content-center">
      <table class ="table-sm">
        <tr>
          <td class="col-4"><%= f.label :content,"画像・動画" %></td>
          <td class="col-4"><%= f.file_field :content, accept: "image/*" %></td>
        </tr>
        <tr>
          <td class="col-4"><%= f.label :name,"タイトル" %></td>
          <td class="col-4"><%= f.text_field :name, class: "col-10 px-0" %></td>
        </tr>
        <tr>
          <td class="col-4 align-top"><%= f.label :introduction,"説明" %></td>
          <td class="col-4"><%= f.text_area :introduction, class: "col-10 px-0",rows: "7" %></td>
        </tr>
        <tr>
          <td class="col-4"><%= f.label :genre_id,"ジャンル" %></td>
          <td class="col-4"><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), {prompt: "選択してください"}, class: "form-control-sm col-10 pl-1" %></td>
        </tr>
        <tr>
          <td class="col-4"><%= f.label :category_id,"カテゴリー" %></td>
          <td class="col-4"><%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name), {prompt: "選択してください"}, class: "form-control-sm col-10 pl-1" %></td>
        </tr>

      </table>
    </div>
    <div class="row col-12 mx-auto d-flex justify-content-center">
      <div class="mt-5 mb-4 ml-5　mx-auto">
        <%= f.submit "新規登録", class: "btn btn-sm btn-outline-success text-center" %>
      </div>
    </div>
  <% end %>
</div>