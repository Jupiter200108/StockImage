<div class ="container-fluid mt-5">

  <div class ="row">
    <div class ="col-4 justify-content-end d-flex">
      <h3>動画画像一覧</h3><p>　(全<%= @items.count %>件)</p>
    </div>
  </div>

  <div class ="d-flex flex-wrap col-md-10 mx-auto">
    <% @items.each do |item| %>
      <%= link_to item_path(item.id) do %>
        <%= image_tag item.content, class: "f-img" %>
      <% end %>
    <% end %>
    <div class ="f-end">
    </div>
  </div>

  <%= paginate @items %>
</div>
