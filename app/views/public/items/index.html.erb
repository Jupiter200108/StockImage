<div class ="container-fluid mt-5">

  <div class ="row">
    <div class ="col-4 justify-content-end d-flex">
      <h3>商品一覧</h3><p>　(全<%= @items.count %>件)</p>
    </div>
  </div>
  <div class ="row mt-5">
    <div class ="col-2">
    </div>
    <div class ="col-9 offset-1">
      <% @items.each do |item| %>
        <table class = "col-2 mb-3  d-inline-block">
          <tr>
            <td>
              <%= link_to item_path(item.id) do %>
                <%= image_tag item.content %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>
              <%= link_to item.name,item_path(item.id), class: "text-dark" %>
            </td>
          </tr>
          <tr>
            <td>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>

  <%= paginate @items %>
</div>


<div class ="container">
  <div class ="row d-flex justify-content-between mb-5 mt-5">
    <h3>商品一覧</h3>
      <%= link_to "商品追加",new_item_path,class: "text-dark" %>
    </div>
  <div class ="row">
    <table class = "table">
      <thead class ="table-dark">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td>
            <%= item.id %>
          </td>
          <td>
            <%= link_to item.name,items_path(item.id), class: "text-dark" %>
          </td>
          <td>
          </td>
          <td>
            <%= item.genre.name %>
          </td>
          <td>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @items %>
</div>
