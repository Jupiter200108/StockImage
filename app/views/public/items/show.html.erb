<div class="container mt-5">
<div class="row mb-5">
  <h3>商品詳細</h3>
</div>

  <div class="row col-md-11 justify-content-center shadow-lg px-4 py-5">

    <div class="col-md-6 d-flex justify-content-center">
      <% if @item.content.present?%>
        <% if @item.content.content_type.include?('image/')%>
          <%= image_tag @item.content,class:"card-img-top image-fluid" %>
        <% else %>
          <%= video_tag rails_blob_path(@item.content), class: "card-img-top image-fluid",controls: true %>
        <% end%>
      <% end %>
      <br>
    </div>

    <div class="col-md-6">
      <div class="<%= "favorite-" + @item.id.to_s %>" >
        <%= render "public/favorites/btn", item: @item %>
      </div>
      <div class="row col-12 mb-2">
        <div class="col-4 align-top">タイトル</div>
        <div class="col-8 align-top"><%= @item.name %></div>
      </div>

      <div class="row col-12 mb-2">
        <div class="col-4 align-top">説明</div>
        <div class="col-8 align-top text-wrap text-break"><%= @item.introduction %></div>
      </div>

      <div class="row col-12 mb-2">
        <div class="col-4 align-top">ジャンル</div>
        <div class="col-8 align-top"><%= @item.genre.name %></div>
      </div>

      <div class="row col-12 mb-2">
        <div class="col-4 align-top">カテゴリー</div>
        <div class="col-8 align-top"><%= @item.category.name %></div>
      </div>

      <div class="row col-12 mb-2">
        <div class="col-4 align-top">価格</div>
        <div class="col-8 align-top">1000円</div>
      </div>
    </div>
    <% if @item.end_user_id == current_end_user.id %>
    <div class="col-md-12 text-center mt-5"><%= link_to "編集する", edit_item_path(@item.id), class: "btn btn-sm btn-outline-success rounded-pill border border-3" %></div>
    <% else %>
    <div class="col-md-12 text-center mt-5">
      <%= form_with model: @cart_item, url: cart_items_path,  method: :post,multipart: true do |f| %>
        <%=f.hidden_field :item_id, :value => @item.id %>
        <!--ログインしていない場合-->
        <% unless current_end_user.present? %>
        <% else %>
          <%=f.hidden_field :end_user_id, :value =>current_end_user.id %>
        <%= f.submit "カートに追加" ,class: "btn btn-sm btn-outline-primary rounded-pill border border-3"%>
        <% end %>
      <% end %>
    </div>
    <% end %>

  </div>
</div>
