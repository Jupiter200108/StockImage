<%= form_with model: @end_user, url: end_user_registration_path do |f| %>
<%= render "public/shared/error_messages", resource: resource %>
<div class="container">
  <div class="mb-5 mt-5">
    <h3>新規会員登録</h3>
  </div>
    <table class="table table-sm table-borderless">
      <tr>
        <td>氏名</td>
        <td>
          <%= f.text_field :name, autofocus: true, placeholder: '令和' %>
        </td>
      </tr>
      
      <tr>
        <td><%= f.label :email,"メールアドレス" %></td>
        <td><%= f.email_field :email, autocomplete: "email",placeholder: 'sample@example.com' %></td>
      </tr> 
    
      <tr>
        <td>
          <%= f.label :password,"パスワード" %>
          <% if @minimum_password_length %>
         (<%= @minimum_password_length %> 文字以上)
          <% end %></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr> 
      <tr>
        <td><%= f.label :password_confirmation,"パスワード(確認用)" %></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td>
        </td>
        <td class="actions">
          <%= f.submit "新規会員登録",class: 'btn btn-outline-success' %>
          <% end %>
        </td>
      </tr>
    </table>
    <h3>既に登録済みの方</h3>
    <p><%= render "public/shared/links" %>からお願いします</p>
</div>
