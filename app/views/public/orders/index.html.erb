<div class="container">
  <div class="row col-12 px-0">
    <div class="mt-5 mb-4">
      <h3>購入一覧</h3>
    </div>
  </div>

  <div class="row col-12 px-0">

    <table class= "table table-bordered">
      <tr>
        <td class= "col-1 px-0 pl-1 py-2 table-dark">購入日</td>
        <td class= "col-2 px-0 pl-1 py-2 table-dark">画像・動画</td>
        <td class= "col-1 px-0 pl-1 py-2 table-dark">支払金額</td>
        <td class= "col-1 px-0 pl-1 py-2 table-dark">注文詳細</td>
      </tr>

      <% @orders.each do |order| %>
        <tr>
          <td class = "align-middle px-1 py-1"><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td class = "align-middle px-1 py-1">
            <% order.order_details.each do |order| %>
          		<%= order.item.name %>
          		<br>
          	<% end %>
          </td>
          <td class = "align-middle px-1 py-1"><%= order.total_payment%></td>
          <td class = "align-middle "><%= link_to "表示する", order_path(order.id), class: "btn btn-primary btn-sm" %></td>
        </tr>
      <% end %>
    </table>
    <div class ="row col-12">
      <div class ="col">
        <span class="textt-center"><%= paginate @orders %></span>
      </div>
    </div>
  </div>
</div>

