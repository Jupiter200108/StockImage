 <div class="container px-0">
  <div class="row col-md-10 mx-0 px-0">
    <div class="col-md-7">
      <div class="row col-md-12 mx-0 px-0">
        <div class="col-6 my-5 px-0">
          <h3>注文情報確認</h3>
        </div>
      </div>
      <div class="col-md-10">
        <% @sum = 0 %>
        <% @total = 0 %>
        <% @cart_items.each do |cart_item| %>
          <div class="col-md-12 d-flex border border-3 rounded-lg my-2 py-2 px-2">


            <%= link_to item_path(cart_item.item.id) do %>
              <%=image_tag cart_item.item.content,size: "50x50" %>
              ID:<%=cart_item.item.id %>
              <%= cart_item.item.name %>
            <% end %>
          　価格(税込)<%= @sum %><% @total %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-5">
      <div class="col-md-12">
        <div class="row col-md-12 mx-0 px-0">
          <div class="col-12 my-5 px-0">
            <h3>ご注文の内容</h3>
          </div>
        </div>
        <div class="col-md-12 border border-3 rounded-lg my-2 py-3 px-2">
          <% @cart_items.each do |cart_item| %>
            <div class="d-flex justify-content-between">
              <div>ID:<%=cart_item.item.id %></div><div><%=cart_item.item.name %></div>
            </div>
          <% end %>
          <hr class="col-10">
          <div class="my-3 d-flex justify-content-between">
            <div>お支払い金額</div><div><%= @total_payment %></div>
            <div>支払方法</div><div><%= @order.payment_method_i18n %></div>
          </div>
        　<%= form_with model: @order_new , url: "/orders" , local:true do |f| %>
            <%= f.hidden_field :end_user_id, value: current_end_user.id %>
            <%= f.hidden_field :payment_method, value:  @order.payment_method %>
            <%= f.hidden_field :total_payment, value: @total%>
          　<%= f.submit "注文を確定する",class: 'btn btn-block mybtn btn-success text-white tx-tfm rounded-pill' %>
        　<% end %>
        </div>
      </div>
    </div>
  </div>
</div>


