<div class="container-fluid px-0">
  <div class="row mx-0">
    <!--サイドバー-->
    <div class="col-md-2 border-right border-3 mt-4">
      <%= render "public/end_users/transition" %>
    </div>
    <!--プロフィールの内容-->
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-12 my-5">
          <h2>保存一覧</h2>
        </div>

        <div class="col-md-12 mx-0 px-0">
          <div class="d-flex flex-wrap">
            <% @favorites.each do |favorite| %>
                <div class="col-6 col-md-3 col-lg-2 px-0">
                  <div class=" row border border-3 rounded-lg px-2 py-2 mx-1 my-1">
                    <%= link_to item_path(favorite.item.id), class: 'row text-dark text-decoration-none mx-0' do %>
                    <div class="col-4 shadow px-0 s-60">
                      <%= render "public/items/content", item: favorite.item %>
                    </div>
                    <div class="col-8">
                      <div class="text-black-50 py-1">ID:<%=favorite.item.id %></div>
                      <div class="pb-1 text-short"><%=favorite.item.name %></div>
                    </div>
                  <% end %>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
      <%= paginate @favorites %>
    </div>
  </div>
</div>