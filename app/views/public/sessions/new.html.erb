<div class="container py-5 my-5">
  <div class="row col-md-4 border border-2 rounded-lg my-5 mx-auto py-5">
		<div class="col-md-12 mx-auto">
			<div class="logo mb-3">
			  <div class="col-md-12 text-center">
				 <h2>ログイン</h2>
			  </div>
			</div>
			<%= form_with model: @end_user, url: end_user_session_path do |f| %>
        <div class="form-group">
          <%= f.label :email,"Email" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'sample@example.com',class: 'col-12 mx-0 pl-1' %>
        </div>
        <div class="form-group">
          <%= f.label :password,"Password" %>
          <%= f.password_field :password, autocomplete: "current-password",class: 'col-12 mx-0 pl-1' %>
        </div>

        <div class="col-md-12 text-center mt-5">
          <%= f.submit "ログイン",class: 'btn btn-block mybtn btn-danger text-white tx-tfm rounded-pill' %>
        </div>
      <% end %>

      <div class="col-md-12 d-flex align-items-center text-black-50 mt-3 mb-2">
        <hr class="col-3"><div class="">または</div><hr class="col-3">
      </div>
      <div class="form-group">
        <%= render "public/shared/links" %>
      </div>
    </div>
	</div>
</div>