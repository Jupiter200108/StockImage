<%= form_with url: search_path, method: :get, local: true do |f| %>
  <div class="input-group input-lg mb-3">
    <%= f.text_field :word,class: "form-control button-addon2",placeholder: "Recipient's username" %>
    <%= f.hidden_field :model, value: "Item"  %>
    <%= f.hidden_field :search, value: "partial_match" %>
    <div class="input-group-append">
      <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i>検索</button>
    </div>
  </div>
<% end %>
